<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/article_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageButton
            android:id="@+id/article_background_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/example3"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/article_title"
            android:fontFamily="@font/tektonpro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_rounded_black_transparent"
            android:padding="5dp"
            android:text="Article Title"
            android:textColor="@color/white"
            android:textSize="@dimen/exploreScreenTitleFontSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/article_subtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/article_subtitle"
            android:fontFamily="@font/tektonpro_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_rounded_black_transparent"
            android:padding="5dp"
            android:text="Article Subtitle"
            android:textColor="@color/white"
            android:textSize="@dimen/articleSubtitleFontSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/article_background_button"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>