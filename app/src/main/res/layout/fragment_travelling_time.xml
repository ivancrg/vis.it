<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:background="@drawable/day_sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="#4D000000"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:text="@string/time_title"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/home_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="#4D000000"
                android:gravity="center"
                android:text="@string/home_time"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/titleTextView" />

            <TextView
                android:id="@+id/home_time"
                android:background="#4D000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:layout_constraintTop_toBottomOf="@id/home_time_title" />

            <TextView
                android:id="@+id/local_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#4D000000"
                android:gravity="center"
                android:text="@string/local_time"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/home_time" />

            <TextView
                android:id="@+id/local_time"
                android:layout_width="wrap_content"
                android:background="#4D000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:layout_constraintTop_toBottomOf="@id/local_time_title" />

            <TextView
                android:id="@+id/destination_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4D000000"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/destination_time"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/local_time" />

            <TextView
                android:id="@+id/destination_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#4D000000"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:layout_constraintTop_toBottomOf="@id/destination_time_title" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>