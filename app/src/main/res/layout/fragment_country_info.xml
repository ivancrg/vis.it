<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".explore.CountryInfoFragment"
    android:background="@color/black"
    android:id="@+id/country_info_scroll_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country_info_relative_layout">

        <include android:id="@+id/country_info_title_element"
            layout="@layout/element_country_info_title"/>

        <include android:id="@+id/country_info_element"
            layout="@layout/element_country_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_info_title_element"
            android:layout_marginTop="30dp"/>

        <View
            android:layout_width="match_parent"
            android:id="@+id/country_info_separator"
            android:layout_height="1dp"
            android:layout_marginHorizontal="5dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/country_info_element"
            android:layout_marginTop="20dp"/>

        <include layout="@layout/element_bigmac_calculator"
            android:id="@+id/bigmac_calculator_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/country_info_separator"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
</ScrollView>