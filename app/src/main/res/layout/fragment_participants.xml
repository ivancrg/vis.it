<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tripPlannerHeader"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/blue"
        android:gravity="bottom"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="391dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="sans-serif"
            android:text="@string/participants_title"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/save_participants"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="130dp"
        android:text="@string/button_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripPlannerHeader"
        app:layout_constraintVertical_bias="0.687" />


    <EditText
        android:id="@+id/textView"
        android:layout_width="303dp"
        android:layout_height="47dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/link_friends"
        app:layout_constraintBottom_toTopOf="@+id/save_participants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripPlannerHeader"
        app:layout_constraintVertical_bias="0.663" />


</androidx.constraintlayout.widget.ConstraintLayout>